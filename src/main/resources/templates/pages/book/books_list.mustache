{{#layout}}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Book</h1>
                </div>
                <div class="col-sm-6">
                    {{#layout.isStaff}}
                    <a href="/book/write" class="btn btn-outline-secondary btn-sm float-right"><i class="fas fa-pen-square"></i> 글쓰기</a>
                    {{/layout.isStaff}}
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <!-- Default box -->
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                        <tr class="d-none d-sm-table-row">
                            <th class="text-center" style="width: 60%">제목</th>
                            <th class="text-center" style="width: 10%">글쓴이</th>
                            <th class="text-center" style="width: 20%">작성일</th>
                            <th class="text-center" style="width: 10%">조회</th>
                        </tr>
                        </thead>
                        <tbody id="tbody">
                        {{#books}}
                        <tr>
                            <td scope="col" class="d-none d-lg-table-cell" style="cursor: pointer;color:MediumBlue;">
                                <a href="/book/view/{{id}}" style="width:100%">{{title}} {{#commentCnt}}<span style="color:Coral" >[{{commentCnt}}]</span> {{/commentCnt}}</a>
                            </td>
                            <td scope="col" class="d-block d-lg-none d-lg-none" onclick="javascript:fn_v_post_view_post({{id}})" style="cursor: pointer;color:MediumBlue">
                                <p style="margin-bottom: 4px;cursor: pointer;color:MediumBlue;">
                                    <a href="/book/view/{{id}}" style="width:100%">{{title}} {{#commentCnt}}<span style="color:Coral" >[{{commentCnt}}]</span> {{/commentCnt}}</a>
                                </p>
                                <p style="margin: 0px;font-size: 11px; color: gray">
                                    {{author}}&nbsp;&nbsp;|&nbsp;&nbsp;{{modifiedDate}}&nbsp;&nbsp;|&nbsp;&nbsp;조회&nbsp;&nbsp;{{viewCnt}}
                                </p>
                            </td>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{author}}</td>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{createdDate}}</td>
                            <td scope="col" class="d-none d-sm-table-cell text-right">{{viewCnt}}</td>
                        </tr>
                        {{/books}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container -->
    </section>
    <!-- /.content -->
</div>
        {{/layout}}

{{>layout/header}}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Community</h1>
                </div>
                <div class="col-sm-6">
                    <a href="/posts/write" class="btn btn-default float-right"><i class="fas fa-pen-square"></i> 글쓰기</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container">

            <!-- Default box -->
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                        <tr class="d-none d-sm-table-row">
                            <th class="text-center" style="width: 10%"> 번호</th>
                            <th class="text-center" style="width: 10%">말머리</th>
                            <th class="text-center" style="width: 30%">제목</th>
                            <th class="text-center" style="width: 10%">글쓴이</th>
                            <th class="text-center" style="width: 20%">작성일</th>
                            <th class="text-center" style="width: 10%">조회</th>
                            <th class="text-center" style="width: 10%">추천</th>
                        </tr>
                        </thead>
                        <tbody id="tbody">
                        {{#posts}}
                        <tr>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{id}}</td>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{id}}</td>
                            <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{author}}</td>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{modifiedDate}}</td>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{id}}</td>
                            <td scope="col" class="d-none d-sm-table-cell text-center">{{id}}</td>
                        </tr>
                        {{/posts}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.container -->
    </section>
    <!-- /.content -->
</div>


        {{>layout/footer}}
